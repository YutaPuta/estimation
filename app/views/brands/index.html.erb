<ul class="breadcrumb">
	<li><%= link_to "Home", menu_index_path %></li>
	<li class="active">ブランド検索</li>
</ul>

<h1>ブランド</h1>
	<table class="table table-striped table-bordered">
		<thead>
			<tr><th>ブランド名</th><th>編集</th><th>削除</th></tr>
		</thead>
		<tbody>
		    <% @brands.each do |brand| %>
		    	<tr>
		    		<td><%= link_to brand.name, brand_path(brand.id) %></td>
		    		<td><%= link_to "[編集]", edit_brand_path(brand.id) %></td>
		    		<td><%= link_to "[削除]", brand_path(brand.id), method: :delete , data: {confirm: "削除しますか？"}%></td>
		    	</tr>
		    <% end %>
		</tbody>
	</table>
<%= paginate @brands %>
<p> <%= link_to "新規登録", new_brand_path, class: 'btn btn-primary' %> </p>
